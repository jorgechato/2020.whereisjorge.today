{
  "name": "whereisjorge.today",
  "version": "1.0.0",
  "description": "Where am I today?",
  "author": "jorgechato",
  "private": true,
  "main": "nuxt.config.js",
  "scripts": {
    "start": "npm run build:dev",
    "build": "cross-env NODE_ENV=production nuxt generate --spa",
    "build:dev": "nuxt",
    "serve": "nuxt build && nuxt start",
    "serve:static": "http-server ./dist/ -p 3000 -c 31536000 --gzip",
    "lint": "npm run lint:js && npm run lint:vue",
    "lint:js": "eslint *.js config",
    "lint:vue": "eslint --ext .vue,.js src",
    "test": "npm run test:unit",
    "test:unit": "jest -c jest.config.js"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "nuxt": "^2.0.0",
    "nuxt-i18n": "^5.4.4",
    "rxjs": "^6.3.3",
    "showdown": "^1.9.0",
    "vue-i18n": "^8.3.1",
    "vue-lazyload": "^1.2.6",
    "webpack": "^4.25.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "compression-webpack-plugin": "^2.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "glob-all": "^3.1.0",
    "jest": "^23.6.0",
    "node-sass": "^4.9.3",
    "purgecss-webpack-plugin": "^1.3.1",
    "sass-loader": "^7.1.0"
  }
}
